<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.yourchef.Dashboard_client"
    android:background="#ffffff"
    android:layout_marginTop="55dp">


    <ScrollView android:id="@+id/item_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:visibility="visible">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
       >



            <android.support.v7.widget.CardView

                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/SnowWhite"
                tools:cardUseCompatPadding="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <android.support.v7.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:elevation="12dp"
                        android:layout_marginLeft="130dp"
                        android:id="@+id/cview2"
                        app:cardCornerRadius="40dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/cimageView1"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/cname_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Client's Name"
                        android:layout_gravity="center"
                        android:textColor="@color/Dgreen"
                        android:textSize="25sp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/cemail_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="monospace"
                        android:text="abc@gmail.com"
                        android:textColor="@color/Dgreen"
                        android:textSize="25sp"
                        android:visibility="visible"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/cphone_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="monospace"
                        android:text="999995555"
                        android:textColor="@color/Dgreen"
                        android:textSize="25sp"
                        android:visibility="visible"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/caddr"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/SnowWhite"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                tools:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cddrress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="monospace"
                        android:text="ADDRRESS"
                        android:textColor="@color/Dgreen"
                        android:textSize="25sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/cddrress_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="monospace"
                        android:padding="7dp"
                        android:text="xyz"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:visibility="visible" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
