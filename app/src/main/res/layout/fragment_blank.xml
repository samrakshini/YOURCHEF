<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.yourchef.BlankFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dashboard">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="@drawable/screen1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/chef_hat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:background="@drawable/screen1"
            android:text="Dashboard"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textColor="@color/SnowWhite"/>
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/screen1"
            android:columnCount="3"
            android:rowCount="4">

            <TextView
                android:id="@+id/name"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Name"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/name_value"
                android:layout_column="1"
                android:layout_row="0"
                android:text="abc"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/name_edit"
                android:layout_column="2"
                android:layout_row="0"
                android:text="Edit" />

            <TextView
                android:id="@+id/email"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Email"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/email_value"
                android:layout_column="1"
                android:layout_row="1"
                android:text="abc@gmail.com"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/email_edit"
                android:layout_column="2"
                android:layout_row="1"
                android:text="Edit" />

            <TextView
                android:id="@+id/dob"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Name"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/dob_value"
                android:layout_column="1"
                android:layout_row="2"
                android:text="abc"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/dob_edit"
                android:layout_column="2"
                android:layout_row="2"
                android:text="Edit" />

            <TextView
                android:id="@+id/phone"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Phone number:  "
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/phone_value"
                android:layout_column="1"
                android:layout_row="3"
                android:text="999995555"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/phone_edit"
                android:layout_column="2"
                android:layout_row="3"
                android:text="Edit" />
        </GridLayout>
    </LinearLayout>

</FrameLayout>
