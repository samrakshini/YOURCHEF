<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.yourchef.BlankFragment">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_edit_black_24dp"
        android:backgroundTint="#ffee58"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dashboard"
        android:layout_marginTop="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#ccff90"
            android:text="Dashboard"
            android:textAlignment="center"
            android:textColor="@color/SnowWhite"
            android:textSize="35dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="#ffffff"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/chef_hat"
            />



        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="30dp"
            android:id="@+id/gridchef">


            <TextView
                android:id="@+id/name"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name_value"
                android:layout_column="1"
                android:layout_row="0"
                android:text="abc"
                android:textSize="15sp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/email"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Email"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/email_value"
                android:layout_column="1"
                android:layout_row="1"
                android:text="abc@gmail.com"
                android:textSize="15sp"
                android:textColor="@color/black"/>



            <TextView
                android:id="@+id/dob"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Name"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/dob_value"
                android:layout_column="1"
                android:layout_row="2"
                android:text="abc"
                android:textSize="15sp"
                android:textColor="@color/black"/>



            <TextView
                android:id="@+id/phone"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Phone number:  "
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/phone_value"
                android:layout_column="1"
                android:layout_row="3"
                android:text="999995555"
                android:textSize="15sp"
                android:textColor="@color/black"/>



        </GridLayout>


    </LinearLayout>

</FrameLayout>
