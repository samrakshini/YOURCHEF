<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.yourchef.Make_hire"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView

        android:id="@+id/hc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/SnowWhite"
        tools:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="You hired "
                android:textColor="@color/Dgreen"
                android:textSize="25sp"
                android:visibility="visible"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/rcv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="Chef-abcd"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/rcv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="on 10th April,2018"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
