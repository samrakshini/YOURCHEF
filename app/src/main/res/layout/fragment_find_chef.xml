    <android.support.v7.widget.CardView

        android:id="@+id/nots"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/SnowWhite"
        tools:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your type:"
            android:id="@+id/find_type"
            android:textColor="@color/fgreen"
            android:layout_marginLeft="80dp"
            android:padding="10dp"
            android:textSize="15sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDIAN"
            android:id="@+id/find_indian"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/find_mexican"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEXICAN"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
